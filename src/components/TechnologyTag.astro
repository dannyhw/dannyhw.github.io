---
import Image from "astro/components/Image.astro";

interface Props {
  name: string;
  svg: string;
  className: string;
  href: string;
}

const { name, svg, className, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class:list={[
    "tech-tag cyber-card bg-card flex flex-row items-center justify-center gap-2 border p-2 transition-all no-underline",
    className,
  ]}
  style="border-color: rgba(0,229,255,0.18); color: rgba(0,229,255,0.7);"
>
  <Image width={20} height={20} src={`/${svg}.svg`} alt={`${name} icon`} />
  <p class="font-mono text-xs tracking-wider">{name}</p>
</a>

<style>
  .tech-tag {
    transition:
      border-color 0.2s ease,
      color 0.2s ease,
      box-shadow 0.2s ease;
  }

  .tech-tag:hover {
    color: var(--neon-cyan) !important;
    border-color: rgba(0, 229, 255, 0.55) !important;
    box-shadow: 0 0 10px rgba(0, 229, 255, 0.12);
    text-shadow: 0 0 6px rgba(0, 229, 255, 0.4);
  }
</style>
