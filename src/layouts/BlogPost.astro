---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import "../styles/md.css";
import "../styles/global.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-background text-foreground flex w-screen flex-col">
    <Header />
    <div class="container mx-auto w-full max-w-[1440px]">
      <main class="mx-auto flex flex-col gap-y-4 px-2 md:px-4">
        <article class="pt-8 pb-20 md:pt-12 md:pb-32">
          <div class="w-full">
            {
              heroImage && (
                <Image
                  loading={"eager"}
                  width={1020}
                  height={510}
                  src={heroImage}
                  alt=""
                  class="mx-auto my-0 block aspect-video rounded-xl shadow-md"
                />
              )
            }
          </div>

          <div class="m-auto max-w-3xl px-2 py-4 md:px-4">
            <div class="mb-4 py-4 text-center">
              <div class="text-muted-foreground mb-2 text-base">
                <FormattedDate date={pubDate} />
                {
                  updatedDate && (
                    <div class="italic">
                      Last updated on <FormattedDate date={updatedDate} />
                    </div>
                  )
                }
              </div>

              <h1 class="mb-4 text-5xl">{title}</h1>

              <hr />
            </div>

            <div class="slotted">
              <slot />
            </div>
          </div>
        </article>
      </main>

      <Footer />
    </div>
  </body>
</html>
